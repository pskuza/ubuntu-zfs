#!/usr/bin/env bash
set -e
set -x

PREFIX="IP address:"
IP=$(/etc/ip.local)

OUTFILE="/etc/issue"
/bin/sed -i "s,${PREFIX}.*,${PREFIX} ${IP}," ${OUTFILE}
if ! /bin/grep -q "^${PREFIX}" ${OUTFILE}; then
  /bin/grep -v '^$' ${OUTFILE} | /usr/bin/tee ${OUTFILE}
  /bin/cat >>${OUTFILE} <<EOF
${PREFIX} ${IP}

EOF
fi
